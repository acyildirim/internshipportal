@model IEnumerable<InternshipPortal.Models.Job>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="createIndexHeader">Current Jobs</h2>

<div class="createNewButton">
        <a asp-action="Create">Create New</a>
</div>

<table class="table">
    <thead>
        <tr>
            <th class="createDetailLabels">
                @Html.DisplayNameFor(model => model.JobTitle)
            </th>
            <th class="createDetailLabels">
                @Html.DisplayNameFor(model => model.Company)
            </th>
            <th class="createDetailLabels">
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td class="createDetailItems">
                @Html.DisplayFor(modelItem => item.JobTitle)
            </td>
            <td class="createDetailItems">
                @Html.DisplayFor(modelItem => item.Company)
            </td>
            <td class="createDetailItems">
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td class="createIndexButtons">
                <a class="createIndexEdit" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
